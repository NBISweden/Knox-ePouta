echo "Cron configuration"
# rsync -a {{ env['VAULT'] }}/token_flush_cron         /usr/local/sbin/token_flush_cron
# chmod 0755 /usr/local/sbin/token_flush_cron
# cat > /etc/cron.d/token_flush_cron <<EOF
